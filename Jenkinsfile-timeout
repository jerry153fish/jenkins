pipeline {
    agent any
	
    stages {
		options {
			timeout(time: 1, unit: 'SECONDS')
		}
        stage('step1') {
			environment {
				TEST= "aaa"
			}
            steps {
				println TEST
				sleep(time:3,unit:"SECONDS")
				sh "echo ${TEST}"
            }
        }
    }
	post {
        always {
            echo 'I will always say Hello again!'
        }
    }
}
